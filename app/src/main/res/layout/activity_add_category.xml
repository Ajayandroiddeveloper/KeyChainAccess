<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajay.keychainaccess.AddCategoryActivity">


    <EditText
        android:id="@+id/catName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:layout_margin="10dp"
        android:hint="Enter Name"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/catDescription_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_margin="10dp"
        android:hint="Enter Description"
        android:textSize="25sp"
        android:layout_below="@id/catName_et"
        android:gravity="start"/>

    <EditText
        android:id="@+id/catPassword_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:layout_margin="10dp"
        android:hint="Enter Password"
        android:textSize="25sp"
        android:layout_below="@id/catDescription_et"/>

    <EditText
        android:id="@+id/catConfirmPassword_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:layout_margin="10dp"
        android:hint="Enter Confirm Password"
        android:textSize="25sp"
        android:layout_below="@id/catPassword_et"/>

    <Button
        android:id="@+id/catAdd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Add"
        android:textColor="@color/registerLoginTextColor"
        android:textSize="25sp"
        android:layout_below="@id/catConfirmPassword_et"
        android:layout_margin="10dp"/>


</RelativeLayout>
