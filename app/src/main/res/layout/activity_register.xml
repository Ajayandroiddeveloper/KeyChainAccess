<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajay.keychainaccess.RegisterActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter User Name"
        android:background="@drawable/rounded_edit_text"
        android:padding="10dp"
        android:textSize="25sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter Email"
        android:padding="10dp"
        android:textSize="25sp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/name_et"
        android:background="@drawable/rounded_edit_text"/>

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter Phone Number"
        android:padding="10dp"
        android:textSize="25sp"
        android:inputType="phone"
        android:layout_below="@id/email_et"
        android:background="@drawable/rounded_edit_text"/>

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter Password"
        android:padding="10dp"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:layout_below="@id/phone_et"
        android:background="@drawable/rounded_edit_text"/>

    <EditText
        android:id="@+id/confirmPassword_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter Confirm Password"
        android:padding="10dp"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:layout_below="@id/password_et"
        android:background="@drawable/rounded_edit_text"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/confirmPassword_et"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="25sp"
        android:textColor="@color/registerLoginTextColor"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
</ScrollView>
